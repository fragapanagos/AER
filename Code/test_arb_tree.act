// Tests the multiple arbiter cells configured in a tree
import "lib/globals.act";
import "arbiter.act";
import "test.act";

pint N=256;

globals g;
passive_handshaker p(g,,);
active_handshaker c[N];
arbiter::ARB_A arb[N-1];

(; i : N : c[i].g=g;) // connect globals to chidren
(; i : N-1 : arb[i].g=g;) // connect globals to arbiters

// connect arbiters in tree
(; i : N-2 : 
    [ (i%2) = 0 -> 
        arb[i].p.o = arb[(N+i)/2].c1.i;
        arb[i].p.i = arb[(N+i)/2].c1.o;
    [] (i%2) = 1 ->
        arb[i].p.o = arb[(N+i)/2].c2.i;
        arb[i].p.i = arb[(N+i)/2].c2.o;
    ]
)

// connect top of arbiter tree to parent
arb[N-2].p.o = p.i;
arb[N-2].p.i = p.o;

// connect children to arbiter tree leaves
(; i : N : 
    [ (i%2) = 0 -> 
       c[i].o = arb[i/2].c1.i;
       c[i].i = arb[i/2].c1.o;
    [] (i%2) = 1 ->
       c[i].o = arb[i/2].c2.i;
       c[i].i = arb[i/2].c2.o;
    ]
)

bool pReset, sReset;
prs {
    sReset => g.sReset+
    pReset => g.pReset+
    sReset => g._sReset-
    pReset => g._pReset-
    sReset -> g.Vdd+
    sReset -> g.GND-
}
