// defines a 2x2 tile array
import "aer/aer/aer.act";

defproc TILE_2x2(aer::globals_w_analog g) {
    pint M=3;
    pint p4M=64;
    pint p2M=8;
    pint tile_i[p4M/16];
    pint tile_j[p4M/16];
    tile_i = {0, 1, 0, 1};
    tile_j = {0, 0, 1, 1};

    aer::brain_aer::NRN_AER<M, p4M, p2M, tile_i, tile_j, false> tile_2x2;
    tile_2x2.ga = g;
}

export defproc Wrapper(aer::globals_w_analog g) {
    TILE_2x2 tile_2x2(g);
}

Wrapper dut;
