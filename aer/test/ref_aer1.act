// Tests serial tree AER system with 1 neuron
import "aer/aer/ref_aer.act";

pint M=3;
pint N=2;
pint NN=8;

aer::globals g;
aer::active_handshaker<1> x(g,,);
aer::passive_handshaker<1> y(g,,);
aer::AER_NODATA<M, N, NN> aer(g,,,,);
aer.xp[0] = x.o[0];
aer.xa[0] = x.i[0];
aer.yi[0] = y.o[0];
aer.yp[0] = y.i[0];
(; nn : 1..NN-1 :
    aer.xp[nn] = g.GND;
    aer.yi[nn] = g.GND;
)
