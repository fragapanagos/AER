// tests that brain aerv can deliver memory packets
import "aer/aerv/aerv.act";

pint M     = 3;
pint M_SPK = M+1;
pint M_MEM = M+4;
pint N_SYN = 64; // 4^M
pint N_MEM = N_SYN/4;
pint D     = 4;
globals g;
bool Reset = g.sReset;

SINK_e1ofN<2> spk_snk[N_SYN];
SINK_eMx1ofN<M_MEM-M, D> mem_snk[N_MEM];

a1of2 y_syn[N_SYN];
(; n : N_SYN :
    spk_snk[n].g = g;
    spk_snk[n].d.d = y_syn[n].d;
    prs<g.Vdd, g.GND> {
        spk_snk[n].d.e => y_syn[n].a-
    }
)

eMx1of4<M_MEM-M> y_mem[N_MEM];
(; n : N_MEM :
    mem_snk[n].g = g;
    (; m : M_MEM - M :
        mem_snk[n].d.m[m].d = y_mem[n].m[m].d;
    )
    mem_snk[n].d.e = y_mem[n].e;
)

eMx1of4<M_SPK> spk_src;
eMx1of2<2*M_MEM> mem_src;
(; m : M_SPK:
    (; n : D :
        spk_src.m[m].n[n] = g.GND;
    )
)
eMx1of2_to_eMx1of4<2*M_MEM, M_MEM> mem_src_(g, mem_src,);

BRAIN_AERV<M, M_SPK, M_MEM, N_SYN, N_MEM> aerv(
    g, spk_src, mem_src_.y, y_syn, y_mem);
